<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white2"
    >

    <LinearLayout
        android:id="@+id/messageslist_joinrequest_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/gray">
        <TextView
            android:id="@+id/messageslist_textview_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:layout_marginTop="4dp"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/joinrequest_agree_button"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="@string/agree"
                android:layout_height="wrap_content"
                android:textColor="@color/blue2"
                android:textSize="15sp"
                android:background="@color/gray"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/joinrequest_ignore_button"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="@string/ignore"
                android:textColor="@color/blue2"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/messageslist_notify_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white2">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/notify_imageview_item"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/list_view_tip"
                    android:layout_height="fill_parent" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="19"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/notify_textview"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:paddingLeft="20dp"
                            android:paddingRight="15dp"
                            android:paddingTop="10dp"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:typeface="monospace"/>
                        <TextView
                            android:id="@+id/notify_time_textview"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/time_color"
                            android:paddingLeft="20dp"
                            android:textSize="12sp"/>
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
